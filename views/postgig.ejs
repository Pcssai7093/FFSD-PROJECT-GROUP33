<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Post A Gig</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
     <link rel="stylesheet" href="/postgig.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/navbar.css">
    <link rel="stylesheet" href="/homepage.css">
    <script src="https://kit.fontawesome.com/7178d28811.js" crossorigin="anonymous"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <script defer src="/navbar.js"></script>
    <!-- <script defer src="/descpage.js"></script> -->
    
</head>
<body>
    <%- include('./partials/navbar') %> 
<pre>




</pre>
<form action="/postgig/<%= locals.User_id||'' %> " method="post" id="postgig-form">
    <div class="bdy">

        <div class="section-1">
            <div class="row-section">
                <label for="gig-title" >Product Title:</label>
                 <input type="text" name="gig_title" id="gig-title">
                 <p id="title-err" class="err"></p>
            </div>
            
            <div class="row-section">
                <label for="gig-description">Product description:</label>
                <textarea name="gig_description" id="gig-description" cols="30" rows="10"></textarea>
                <p id="desc-err" class="err"></p>
                
            </div>
            
            <div class="row-section">
                <label for="gig-category">Product Category:</label>
                <select name="gig_category" id="gig-category">
                     <option value="programming">programming </option>
                     <option value="web development">web development</option>
                     <option value="cloud computing">cloud computing</option>
                     <option value="communication networks">communication networks</option>    
                     <option value="machine learning">machine learning</option>    
                     <option value="game development">game development</option>                           
                </select>
            </div>
            
            <div class="row-section">
                <label for="gig-price-basic">Basic price</label>
                <input type="text" name="gig_price_basic" id="gig-price-basic" value="0">
                <p id="basic-price-err" class="err"></p>
            </div>

            <div class="row-section">
                <label for="gig-basic-desc">Description</label>
                <textarea name="gig_basic_desc" id="gig-basic-desc" cols="30" rows="5"></textarea>
                <p id="basic-desc-err" class="err"></p>
            </div>

            <div class="row-section">
                <label for="gig-price-standard">Standard price</label>
                <input type="text" name="gig_price_standard" id="gig-price-standard" value="0">
                <p id="standard-price-err" class="err"></p>
            </div>
    
        </div>


        <div class="section-1">
            <div class="row-section">
                <label for="gig-standard-desc">Description</label>
                <textarea name="gig_standard_desc" id="gig-standard-desc" cols="30" rows="5"></textarea>
                <p id="standard-desc-err" class="err"></p>
            </div>

            <div class="row-section">
                <label for="gig-price-premium">premium price</label>
                <input type="text" name="gig_price_premium" id="gig-price-premium" value="0">
                <p id="premium-price-err" class="err"></p>
            </div>

            <div class="row-section">
                <label for="gig-premium-desc">Description</label>
                <textarea name="gig_premium_desc" id="gig-premium-desc" cols="30" rows="5"></textarea>
                <p id="premium-desc-err" class="err"></p>
            </div>

            <div class="row-section">
                <label for="img-1">Thumnail image:</label>
                <input type="file" name="img_1" id="img-1" class="image-input" hidden="hidden" accept="image/png">
                <button type="button" id="custom-button-1" class="Cbtn">Choose Image</button>  
                <span id="custom-text-1"  class="Ctxt">No file selected</span>
            </div>

            <div class="row-section">
                <label for="img-2">Service image-1</label>
                <input type="file" name="img_2" id="img-2" class="image-input" hidden="hidden   " accept="image/png">
                <button type="button" id="custom-button-2"  class="Cbtn">Choose Image</button>  
                <span id="custom-text-2"  class="Ctxt">No file selected</span>
            </div>

            <div class="row-section">
                <label for="img-3">Service image-2:</label>
                <input type="file" name="img_3" id="img-3" class="image-input" hidden="hidden" accept="image/png">
                <button type="button" id="custom-button-3"  class="Cbtn">Choose Image</button>  
                <span id="custom-text-3"  class="Ctxt">No file selected</span>
            </div> 
            
            <div class="row-section">
                <label for="img-4">Service image-3:</label>
                <input type="file" name="img_4" id="img-4" class="image-input" hidden="hidden" accept="image/png">
                <button type="button" id="custom-button-4"  class="Cbtn">Choose Image</button>  
                <span id="custom-text-4"  class="Ctxt">No file selected</span>
            </div> 

            <div class="row-section">
                <label for="img-5">Service image-4:</label>
                <input type="file" name="img_5" id="img-5" class="image-input" hidden="hidden" accept="image/png">
                <button type="button" id="custom-button-5"  class="Cbtn">Choose Image</button>  
                <span id="custom-text-5"  class="Ctxt">No file selected</span>
            </div> 
        </div>

    </div>

    <h5 style="text-align: center;" id="preview">PREVIEW</h5>
    <div class="card gig" style="width:250px;margin:10px auto;">
        <img src="/"alt="image" class="card-img-top image-output" style="width:248.5px; height:200px;">
        <div class="card-body">
            <img src="/HPprofileimg1.png" alt="logo" class="gig-logo" style="width:30px;height:30px; border-radius: 50%; float:left;">
        <h5 class="card-title"><%= locals.User_name||'' %> </h5>
            <span id="gig-title-content"></span>
            <i class="fa fa-bookmark-o wishlist-icon" aria-hidden="true"></i>
        </div>
        <div class="card-footer text-end position-relative">
            <a href="#"><button class="gig-btn" style="float:left" disabled>Hire Now</button></a>
            <p style="position:absolute; top:0; right:10px;color:rgb(104, 104, 104);">Starting From:</p>
            <p class="price" style="position:absolute; bottom:-10px; right:10px">Rs <span id="gig-price"></span>\-</p>
        </div>
    </div>


    <div class="product-gallery-conatiner">
        <div class="product-gallery">
            <div class="main-img" id="main-img">
                <img src="/d1.jpg" alt="" class="m image-output">
                <img src="/d2.jpg" alt="" class="m image-output">
                <img src="/d3.jpg" alt="" class="m image-output">
                <img src="/d4.jpg" alt="" class="m image-output">
            </div>
            <div class="image-grid">
                <img src="/d1.jpg" alt="" class="g gal-img image-output">
                <img src="/d2.jpg" alt="" class="g gal-img image-output">
                <img src="/d3.jpg" alt="" class="g gal-img image-output">
                <img src="/d4.jpg" alt="" class="g gal-img image-output">
            </div>
        </div>
    </div>

    <div class="submit-btn">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>


</form>

   
    <br>

    <button id="preview-btn"><a href="#preview">P</a></button>
    <%- include('./partials/footer') %> 

    <script defer src="/postgig.js"></script>

</body>
</html>
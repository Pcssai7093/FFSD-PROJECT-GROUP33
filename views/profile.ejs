<body>

  <%- include('./partials/navbar.ejs')  %> 
  <pre>



  </pre>
<form action="/addDetails/<%= locals.User_idpf %> " method="post">
  <div class="profile-container">
    <div class="profile-image">
      <img src="/<%= locals.pf_img||'' %>" alt="" id="display_img" style="width:180px;height:180px"> 
      <br>
      <button id="image-btn" type="button">Add image</button> 
      <input type="file" name="profile_img" id="profile_img" hidden="hidden"  accept="image/png">
      <i class="fa fa-edit <%= locals.hide||'' %> " id="edit-icon"></i>      
    </div>
    <div class="profile-body">
      <label for="User_name">Username</label>
      <input type="text" name="User_name" id="User_name" value="<%= locals.User_namepf||'chandra' %> " disabled>

      <label for="Full_name">Name</label>
      <input type="text" name="Full_name" id="Full_name" value="<%= locals.Full_name||'chandra' %> " disabled>
     
      <label for="User_about">About</label>
      <textarea name="User_about" id="User_about" cols="30" rows="7" disabled><%= locals.User_about||''%></textarea>

      <button type="submit" id="save-btn">Save</button>
    </div>
  </div>
</form>
  


<%- include('./partials/footer') %> 
  <script defer src="/navbar.js"></script>
 
</body>

</html>
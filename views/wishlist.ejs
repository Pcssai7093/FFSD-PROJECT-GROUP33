<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Wishlist</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" />
  <link rel="stylesheet" href="/navbar.css">

  <!-- <link rel="stylesheet" href="/wishlist.css"/> -->
  <link rel="stylesheet" href="/homepage.css">
  <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

  <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
  <script defer src="/wishlist.js"></script>
</head>

<body>

  <%- include('./partials/navbar') %>

<pre>

  


</pre>
    <div class="list-container">
      <div class="main-cont">
        <div id="gig-section">
          
          <% for(let i=0;i<locals.gig_data.length;i++){ %> 
            <div class="card gig">
                <img src="/<%= locals.gig_data[i].tnimg||'' %> "alt="image" class="card-img-top tbn-img" style="width:248.5px; height:200px;">
                <div class="card-body">
                    <img src="/HPprofileimg1.png" alt="logo" class="gig-logo" style="width:30px;height:30px; border-radius: 50%; float:left;">
                <h5 class="card-title"><%= locals.gig_data[i].user_name||'default' %> </h5>
                 <%= locals.gig_data[i].data_desc %>
                    <!-- I will design good frwfrgfdata bases using nosql -->
                    
                    <i class="fa fa-bookmark-o wishlist-icon" aria-hidden="true"></i>
                    <i class="wishlist-icon-cont" style="display:none;"><%= locals.gig_data[i].gig_id||'' %></i>
                </div>


                <form action="/wishlistdelete/<%= locals.gig_data[i].mainuser_id||'' %>" method="post" id="gigdelete" >

                  <input type="text" name="gigid" value="<%= locals.gig_data[i].gig_id||'' %>" hidden>

                          <!-- <div class="gig-remove">
                          <a onclick="SubmitEvent" href="" class="delete"><i class="fa fa-times" aria-hidden="true"></i></a>
                        </div> -->

                </form>
                <div class="gig-remove">
                  <a onclick="formsubmit()" class="delete" style="cursor: pointer;"><i class="fa fa-times"></i></a>
                </div>




                <div class="card-footer text-end position-relative">
                    <a href="/descpage/<%= locals.gig_data[i].mainuser_id||'' %>/<%= locals.gig_data[i].gig_id||'' %>"><button class="gig-btn" style="float:left">Hire Now</button></a>
                    <p style="position:absolute; top:0; right:10px;color:rgb(104, 104, 104);">Starting From:</p>
                    <p class="price" style="position:absolute; bottom:-10px; right:10px">Rs-<%= locals.gig_data[i].price %> \-</p>
                </div>
            </div>
        <% } %>
        
        </div>

      </div>
    </div>

    <!-- Footer -->

    <script defer src="/navbar.js"></script>
</body>

</html>